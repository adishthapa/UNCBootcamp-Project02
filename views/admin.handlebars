<div class="container text-center p-5" id="admin-home">
    <div class="row">
        <div class="col">
            <form>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <button type="button" class="btn btn-primary" id="admin-login">Submit</button>
            </form>
        </div>
    </div>
</div>

<div class="container p-5" id="admin-add-inventory">
    <div class="row">
        <div class="col">
            <h1>Add a new Item to the Inventory:</h1>
            <form id="inventory-form">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input placeholder="Name" type="text" class="form-control" id="name">
                    <br />
                    <div class="form-group">
                        <label for="category">Select Category:</label>
                        <select class="custom-select" id="category">
                            <option value="1">Drink</option>
                            <option value="2">Food</option>
                            <option value="3">Product</option>
                        </select>
                    </div>
                    <br />
                    <label for="type">Type:</label>
                    <input placeholder="Type" type="text" class="form-control" id="type">
                    <br />
                    <label for="price">Price:</label>
                    <input placeholder="Price" type="number" class="form-control" id="price">
                    <br />
                    <label for="quantity">Quantity:</label>
                    <input placeholder="Quantity" type="number" class="form-control" id="quantity">
                    <br />
                    <button type="submit" class="btn btn-primary submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container-fluid text-center" id="admin-view-inventory">
    <div class="row" id="categories">
        <div class="col-4 category">
            <a class="nav-link active" href="#" id="drinks">Drinks</a>
        </div>
        <div class="col-4 category">
            <a class="nav-link" href="#" id="foods">Foods</a>
        </div>
        <div class="col-4 category">
            <a class="nav-link" href="#" id="products">Products</a>
        </div>
    </div>
</div>