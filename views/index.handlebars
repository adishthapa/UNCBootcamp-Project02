<!-- Modal for Signup/Login -->
<div class="modal fade" id="modal-login-signup" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div>
                <ul class="nav nav-tabs">
                    <li id="tab1" class="active tab-style login-shadow"><a href="#login" data-toggle="tab">Log
                            In</a></li>
                    <li id="tab2" class="tab-style"><a href="#signup" data-toggle="tab">Sign Up</a></li>
                </ul>
            </div>
            <div class="modal-body">
                <div class="tab-content">
                    <div class="tab-pane fade active in" id="login">
                        <form class="form-horizontal" id="login-form">
                            <fieldset>
                                <!-- Sign In Form -->
                                <div class="group">
                                    <input required="" class="input" type="email" id="login-email"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="login-email">Email</label>
                                </div>
                                <div class="group">
                                    <input required="" class="input" type="password" id="login-password"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="login-password">Password</label>
                                </div>
                                <!-- Button -->
                                <div class="control-group">
                                    <label class="control-label" for="login"></label>
                                    <div class="controls">
                                        <button id="login" name="login" class="btn btn-primary btn-block">Log
                                            In</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="signup">
                        <form class="form-horizontal" id="signup-form">
                            <fieldset>
                                <!-- Sign Up Form -->
                                <div class="group">
                                    <input required="" class="input" type="text" id="signup-firstname"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="signup-firstname">First Name</label>
                                </div>
                                <div class="group">
                                    <input required="" class="input" type="text" id="signup-lastname"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="signup-lastname">Last Name</label>
                                </div>
                                <div class="group">
                                    <input required="" class="input" type="email" id="signup-email"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="signup-email">Email</label>
                                </div>
                                <div class="group">
                                    <input required="" class="input" type="password" id="signup-password"><span
                                        class="highlight"></span><span class="bar"></span>
                                    <label class="label" for="signup-password">Password</label>
                                </div>
                                <br>
                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input" id="signup-admin" value="TEST">
                                    <label class="form-check-label" for="signup-admin">Admin Account</label>
                                </div>
                                <!-- Button -->
                                <div class="control-group">
                                    <label class="control-label" for="signup-btn"></label>
                                    <div class="controls">
                                        <button type="submit" id="signup-btn" name="signup-btn"
                                            class="btn btn-primary btn-block">Sign
                                            Up</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Viewing Items -->
<div class="modal" id="modal-inventory" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inventory-id"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <p id="inventory-description">
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <form id="add-to-cart">
                    <div class="form-row align-items-center">
                        <div class="col-4 my-1">
                            <label class="sr-only" for="modal-quantity">Quantity</label>
                            <input type="number" class="form-control" id="modal-quantity" placeholder="Quantity">
                        </div>
                        <div class="col-4 my-1">
                            <label class="mr-sm-2 sr-only" for="modal-size">Size</label>
                            <select class="custom-select mr-sm-2" id="modal-size">
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                            </select>
                        </div>
                        <div class="col-4 my-1">
                            <button type="submit" class="btn btn-chalk">Add to Cart</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

