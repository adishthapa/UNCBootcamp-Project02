<div id="container">
    <video autoplay muted loop>
        <source src="/media/coffee.mp4" type="video/mp4">
    </video>
    <div id="overlay"></div>
</div>

<div class="container-fluid text-center">
    <div class="row" id="categories">
        <div class="col-4 category">
            <a class="nav-link active disabled" href="#" id="drinks">Drinks</a>
        </div>
        <div class="col-4 category">
            <a class="nav-link" href="#" id="foods">Foods</a>
        </div>
        <div class="col-4 category">
            <a class="nav-link" href="#" id="products">Products</a>
        </div>
    </div>
</div>

<div class="container-fluid text-center">
    <div class="row" id="options">
        <div class="col-3 p-4" id="items-list-name-1">
            <h3 class="pb-3 white-border">Name:</h3>
            <div id="items-list-name-1-data">
            </div>
        </div>
        <div class="col-3 p-4" id="items-list-price-1">
            <h3 class="pb-3 white-border">Price:</h3>
            <div id="items-list-price-1-data">
            </div>
        </div>
        <div class="col-3 p-4" id="items-list-name-2">
            <h3 class="pb-3 white-border">Name:</h3>
            <div id="items-list-name-2-data">
            </div>
        </div>
        <div class="col-3 p-4" id="items-list-price-2">
            <h3 class="pb-3 white-border">Price:</h3>
            <div id="items-list-price-2-data">
            </div>
        </div>
    </div>
</div>

<!-- Modal for Viewing Items -->
<div class="modal" id="modal-inventory" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inventory-id"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <p id="inventory-description">
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <form id="add-to-cart">
                    <div class="form-row align-items-center">
                        <div class="col-4 my-1">
                            <label class="sr-only" for="modal-quantity">Quantity</label>
                            <input type="number" class="form-control" id="modal-quantity" placeholder="Quantity">
                        </div>
                        <div class="col-4 my-1">
                            <label class="mr-sm-2 sr-only" for="modal-size">Size</label>
                            <select class="custom-select mr-sm-2" id="modal-size">
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                            </select>
                        </div>
                        <div class="col-4 my-1">
                            <button type="submit" class="btn btn-chalk">Add to Cart</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

